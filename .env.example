PORT=8000
ENV=development

APP_NAME=Claim Processing Pipeline
APP_VERSION=1.0.0
DEBUG=true

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres_user
DB_PASSWORD=pg_password
DB_NAME=pg_db
DB_SSLMODE=disable
DB_URL=postgresql+psycopg2://postgres_user:pg_password@postgres:5432/pg_db?sslmode=disable
DB_ECHO=True
DATABASE_ECHO=true
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Server Settings
HOST=0.0.0.0
CORS_ORIGINS=*

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# PDF Processing Settings
MAX_PDF_SIZE_MB=50
PDF_CHUNK_SIZE=4000

# LangGraph Settings
LANGGRAPH_RECURSION_LIMIT=100

# File Storage Settings
FILE_STORAGE_PATH=./uploads
FILE_RETENTION_DAYS=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=

# API Settings
API_TIMEOUT_SECONDS=600

# Extraction Configuration
MIN_CONFIDENCE_SCORE=0.7
